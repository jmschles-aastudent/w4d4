<h3><%= @band.name %></h3>
<% if @current_user.admin? %>
	<%= button_to "Delete Band", band_url(@band), :method => "delete" %>
<% end %>

<% @albums.each do |album| %>
	<h4>
		<%= link_to album.name, album_url(album) %>
		<% if @current_user.admin? %>
			<%= button_to "Delete Album", album_url(album), :method => "delete" %>
		<% end %>
	</h4>

	<% album.tracks.each do |track| %>
		<li><%= link_to track.title, track_url(track) %></li>
	<% end %>
<% end %>